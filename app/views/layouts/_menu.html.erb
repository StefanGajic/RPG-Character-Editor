
<div class="float-left">
<%= link_to home_path do %>
  <%= image_tag("rpg_logo.jpeg", :alt => "rpg logo", :class => "style_logo") %>
<% end %>
</div>

<ul class="float-right list-unstyled" id="topnav">
  <li><%= link_to "Home", home_path, :class => "btn btn-success btn-sm" %></li>
  <li><%= link_to "All Characters", character_types_path, :class => "btn btn-primary btn-sm" %></li>
