<div class="show-character">
  <p>
  <h3>Name:</h3>
  <h1><%= @character_type.name %></h1>
  </p>

  <% if @character_type.avatar.attached? %>
    <%= image_tag @character_type.avatar, style: "width: 500px; height: auto" %>
  <% else %>
    <%= image_tag("no-image.png", :alt => "no image", style: "width: 500px; height: auto") %>
  <% end %>
</div>
<div id="character_attributes">
<% if @character_type.character_attributes.any? %>
  <br>
    <%= render @character_type.character_attributes, remote: true %>
    </div>
  <% if user_signed_in? %>
    <% if @character_type.user_id == current_user.id %>
      <div id="new-attribute">
        <h2>Add an Attribute</h2>
        <%= render 'character_attributes/form', character_attribute: @character_type.character_attributes.build, remote: true %>
      </div>

    <% end %>
  <% end %>
<% end %>
<hr>
<div class="navigation-links">
  <% if user_signed_in? %>
<% if @character_type.user_id == current_user.id%>
    <%= link_to 'Edit', edit_character_type_path(@character_type), :class => "btn btn-warning" %>
  <% end %>
  <% end %>
  <%= link_to 'Back', character_types_path, :class => "btn btn-success" %>
</div>

