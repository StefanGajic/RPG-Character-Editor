<div class="jumbotron text-center">
  <h1>Edit Your Character</h1>
</div>

<%= render 'form', character_type: @character_type, remote: true %>
<div id="character_attributes">
<br>
<% if @character_type.character_attributes.any? %>
  <%= render @character_type.character_attributes.includes([icon_attachment: :blob]), remote: true %>
<% end %>
  </div>
<div id="new-attribute">
  <h2>Add an Attribute</h2>
  <%= render 'character_attributes/form', character_attribute: @character_type.character_attributes.build, remote: true %>
</div>
<br>
<br>
<div class="navigation-links">
<%= link_to 'Show', @character_type, :class => "btn btn-primary" %>
<%= link_to 'Back', character_types_path, :class => "btn btn-success" %>
</div>
