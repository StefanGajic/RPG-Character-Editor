      <h2><%= pluralize(character_attribute.errors.count, "error") %> prohibited this character_attribute from being
        saved:</h2>
      <ul>
        <% character_attribute.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="update-attributes">
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>

    <div class="form-group">
      <%= form.label :value %>
      <%= form.number_field :value %>
    </div>

    <div class="form-group">
      <%= form.label :icon %>
      <%= form.file_field :icon %>
    </div>

