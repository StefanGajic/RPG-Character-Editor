<div class="jumbotron text-center">
  <h1>Characters</h1>
</div>

<table class="characters">
  <thead>
  <tr>
    <th>Name</th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <% @character_types.each do |character_type| %>
    <tr>
      <td><%= character_type.name %></td>
      <td><%= link_to 'Show', character_type, :class => "btn btn-primary" %></td>
      <% if user_signed_in?  && character_type.user_id == current_user.id%>
          <td><%= link_to 'Edit', edit_character_type_path(character_type), :class => "btn btn-warning", id: "edit-character" %></td>
          <td><%= link_to 'Destroy', character_type, method: :delete, data: {confirm: 'Are you sure?'}, :class => "btn btn-danger", id: "delete-character" %></td>
        <% end %>
    </tr>
  <% end %>
  </tbody>
</table>
<br>

<div class="container pagination justify-content-center" >
  <%= paginate @character_types %>
</div>

<br>
<div class="links-characters-index">

<% if user_signed_in? %>
  <%= link_to 'New Character Type', new_character_type_path, :class => "btn btn-info" %>
    <br>
    <br>
    <%= link_to 'YOUR CHARACTERS', my_characters_path, :class => "btn btn-warning" %>
<% end %>
<br>
<br>
<%= link_to 'HOME PAGE', home_path, :class => "btn btn-success" %>
</div>
